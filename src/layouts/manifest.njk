{
	"name": "{{config.projectName}}",
	"short_name": "{{config.projectName}}",
	"lang": "en-GB",
	"start_url": "/{{config.namespace}}/",
	"display": "standalone",
	"background_color": "#000000",
	"theme_color": "{{config.accent}}",
	"icons": [
		{
			"src": "/{{config.namespace}}/images/appicons/round-192.png",
			"sizes": "192x192",
			"type": "image/png"
		},
		{
			"src": "/{{config.namespace}}/images/appicons/round-512.png",
			"sizes": "512x512",
			"type": "image/png"
		},
		{
			"src": "/{{config.namespace}}/images/appicons/mask.png",
			"sizes": "512x512",
			"type": "image/png",
			"purpose": "maskable"
		}
	]{% if config.shortcuts %},
	"shortcuts": [
		{%- for item in config.shortcuts -%}
		{
			"name": "{{item.name}}",
			"url": "/{{config.namespace}}/{{item.slug}}.html",
			"icons": [
				{
					"src": "/{{config.namespace}}/images/shorticons/{{item.slug}}.png",
					"sizes": "192x192",
					"type": "image/png"
				}
			]
		}{% if not loop.last %},{% endif %}
		{%- endfor -%}
	]
	{% endif %}
}
